        <!--identity="true"/>-->
        <!--</table>-->
        <!--<table tableName="commodity_type">-->
        <!--<generatedKey column="id" sqlStatement="MySql"-->
        <!--identity="true"/>-->
        <!--</table>-->
        <!--<table tableName="orders">-->
        <!--<generatedKey column="id" sqlStatement="MySql"-->
        <!--identity="true"/>-->
        <!--</table>-->
        <table tableName="commodity">
            <generatedKey column="id" sqlStatement="MySql"
                          identity="true"/>
        </table>

    </context>
</generatorConfiguration>
